<h1>ブログ編集</h1>

<%= form_with(model: @blog, local: true) do |form| %>
  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="blog_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <p class="text-center"><%= form.file_field :image %></p>
  <%= form.submit %>
<% end %>